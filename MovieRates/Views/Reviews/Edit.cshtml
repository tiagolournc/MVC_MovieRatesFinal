@model MovieRates.Models.Reviews

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Reviews</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            @if (User.IsInRole("Gestor")) {
                <input type="hidden" asp-for="IdReview" />
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Visibilidade" /> @Html.DisplayNameFor(model => model.Visibilidade)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Comentario" class="control-label"></label>
                    <input asp-for="Comentario" class="form-control" />
                    <span asp-validation-for="Comentario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Pontuacao" class="control-label"></label>
                    <input asp-for="Pontuacao" class="form-control" />
                    <span asp-validation-for="Pontuacao" class="text-danger"></span>
                </div>
            } else if (User.IsInRole("Cliente")) {
                <input type="hidden" asp-for="IdReview" />
                <div style="display: none" class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Visibilidade" /> @Html.DisplayNameFor(model => model.Visibilidade)
                    </label>
                </div>
                <div class="form-group">
                    <label asp-for="Comentario" class="control-label"></label>
                    <input asp-for="Comentario" class="form-control" />
                    <span asp-validation-for="Comentario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Pontuacao" class="control-label"></label>
                    <input asp-for="Pontuacao" class="form-control" min="1" max="10" maxlength="2" placeholder="1"/>
                    <span asp-validation-for="Pontuacao" class="text-danger"></span>
                </div>
            }
            <div hidden>
                <input type="hidden" asp-for="IdReview" />

                <div class="form-group">
                    <label asp-for="Data" class="control-label"></label>
                    <input asp-for="Data" class="form-control" />
                    <span asp-validation-for="Data" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="UtilizadoresFK" class="control-label"></label>
                    <select asp-for="UtilizadoresFK" class="form-control" asp-items="ViewBag.UtilizadoresFK"></select>
                    <span asp-validation-for="UtilizadoresFK" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FilmesFK" class="control-label"></label>
                    <select asp-for="FilmesFK" class="form-control" asp-items="ViewBag.FilmesFK"></select>
                    <span asp-validation-for="FilmesFK" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if (User.IsInRole("Gestor")) {
    <div>
        <a asp-action="Index">Back to List</a>
    </div>
}
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }